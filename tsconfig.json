{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "removeComments": true,
        "declaration": true,
        "lib": [
            "es6",
            "esnext",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/graphql/type"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}